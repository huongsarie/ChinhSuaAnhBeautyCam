<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<!--     <ScrollView -->
<!--         android:id="@+id/lineartop_edit" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_alignParentTop="true" > -->

        <LinearLayout
            android:id="@+id/lineartop_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/background_dark"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_crop"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bound_stage_transparent"
                android:scaleType="centerInside"
                android:src="@drawable/crop_icon" />

            <ImageButton
                android:id="@+id/btn_rotate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bound_stage_transparent"
                android:scaleType="centerInside"
                android:src="@drawable/rotate_icon" />
            <ImageButton
                android:id="@+id/btn_effect_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:background="@drawable/button_bound_stage_transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit_white" />
        </LinearLayout>

    <ImageView
        android:id="@+id/img_editting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineartop_edit"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent" >
 
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_back_white"
            android:scaleType="centerInside"
            android:background="@drawable/circle_step"/>

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_save_white"
            android:scaleType="centerInside"
            
            android:background="@drawable/circle_step"/>

    </LinearLayout>

</RelativeLayout>